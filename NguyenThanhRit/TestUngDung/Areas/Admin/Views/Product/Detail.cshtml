@model ModelEF.Model.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var category = (ModelEF.Model.Category)ViewBag.Category;
}

@section header{
<i class="fa fa-desktop">&nbsp; Chi tiết sản phẩm-> @category.Name -> @Html.DisplayFor(model => model.Name)  </i>
}
<div class="container">
    <div class="row">
        <div class="col-lg-12"> 
            <h1 style="color:blue">
                @Html.DisplayFor(model => model.Name)
            </h1>
        </div>
        <div class="col-lg-12">
            <div class="col-md-6">
                <img style="width:500px;height:394px" src="~/Assets/Admin/images/@Html.DisplayFor(model => model.Image)" />
            </div>
            <div class="col-md-6">
                <h3>
                    Mã sản phẩm  : @Html.DisplayFor(model => model.ID)
                </h3>
                <h3>
                    Mã loại sản phẩm : @Html.DisplayFor(model => model.Category_ID)
                </h3>
                <h3>
                    Tên loại sản phẩm :@category.Name
                </h3>
                <h3>
                    Đơn giá : @Html.DisplayFor(model => model.UnitCost)
                </h3>
                <h3>
                    Số lượng : @Html.DisplayFor(model => model.Quantity)
                </h3>
                <h3>
                    Trạng thái: @Html.DisplayFor(model => model.Status)
                </h3>
                <h3>
                    Mô tả sản phẩm:
                </h3>
                <h3>
                    @Html.DisplayFor(model => model.Description)
                </h3>
            </div>           
        </div>
            <div class="col-lg-12">
                <div class="col-md-6"></div>
                <div class="col-md-6">
                    @Html.ActionLink("Quay lại", "Index", "Product", new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
</div>
    
